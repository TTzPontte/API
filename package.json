{
  "name": "api",
  "version": "1.0.0",
  "description": "Pontte API",
  "main": "index.js",
  "scripts": {
    "postinstall": "lerna bootstrap && ./install-layer-deps.sh || echo INSTALADO",
    "pretest": "npm run test:clean && npm run lint && npm run test:template",
    "test": "lerna run test --scope=api-tests",
    "test:coverage": "lerna run test:coverage --scope=api-tests",
    "test:clean": "lerna run test:clean --scope=api-tests",
    "test:template": "sam validate -t template.yml",
    "lint": "eslint . --fix"
  },
  "author": "Devs Pontte <dev@pontte.com.br> (https://www.pontte.com.br)",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^6.7.1",
    "aws-sdk": "^2.636.0",
    "aws-xray-sdk": "^2.5.0",
    "axios": "^0.21.1",
    "dynamoose": "^2.7.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "middy": "^0.34.0",
    "node-fetch": "^2.6.1",
    "requestify": "^0.2.5",
    "uuid": "^7.0.2",
    "uuid-apikey": "^1.4.6",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^25.1.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-strongloop": "^2.1.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.22.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && pretty-quick --staged --pattern '**/*.*(js)'"
    }
  }
}
